<% if user_signed_in?%>
	<table class="table table-striped table-hover">
			<thead class="table-info">
				<tr class="header">
					<th>Doctor Name</th>
					<th>Email Id</th>					
					<th class="text-center bg-dark text-light">Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @doctors.each do |d| %>
					<tr>
						<td><%= d.name%></td>
						<td><%= d.email%></td>
						<td><%= link_to "Create Appointment", new_appointment_path, method: :get, class: "btn btn-sm btn-success text-light" %> </td>					
					</tr>
				<%end%>
			</tbody>
    </table>
<% end %>	

