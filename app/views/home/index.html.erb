<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% if user_signed_in? %>
    <% if current_user.user_role.downcase == 'admin' %>
        <hr>
        <h2 class='text-center'>Admin Panel</h2>
        <hr>
        
        <h3> Welcome <%= current_user.name %>
            <h5 class ="text-secondary">Total <%= User.count%> User</h5>
        </h3>
        <h2>All Users</h2>
        <% @users.each do |user| %>
            <li>          
                <%= user.email%>( <%= user.user_role%> )
            </li>
        <%end%>
        <%= link_to "Create Doctor or Patient",new_user_path%>
    <%end%>
<%end%>


